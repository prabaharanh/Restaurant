<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/developer"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="fill"
        android:background="#A0000000"
        app:srcCompat="@drawable/kavikcolor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="483dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnOrder"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-321dp"
                android:layout_marginTop="27dp"
                android:layout_toEndOf="@+id/btnTable"
                android:background="#AA000000"
                app:srcCompat="@drawable/kavikorderfood" />

            <ImageView
                android:id="@+id/btnTable"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="197dp"
                android:layout_marginTop="119dp"
                android:background="#AA000000"
                app:srcCompat="@drawable/reservation2" />

            <ImageView
                android:id="@+id/btnGallery"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="235dp"
                android:background="#AA000000"
                app:srcCompat="@drawable/kavikgallery" />

            <ImageView
                android:id="@+id/btnLocation"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignStart="@+id/btnOrder"
                android:layout_alignTop="@+id/btnOrder"
                android:layout_marginStart="171dp"
                android:layout_marginTop="307dp"
                android:background="#AA000000"
                app:srcCompat="@drawable/kaviklocation" />

            <ImageView
                android:id="@+id/btnContact"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_below="@+id/btnGallery"
                android:layout_alignStart="@+id/btnOrder"
                android:layout_alignTop="@+id/btnOrder"
                android:layout_marginStart="1dp"
                android:layout_marginTop="414dp"
                android:layout_marginBottom="172dp"
                android:background="#AA000000"
                app:srcCompat="@drawable/kavikcontact" />

            <ImageView
                android:id="@+id/btnAbout"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="198dp"
                android:layout_marginTop="542dp"
                android:background="#AA000000"
                app:srcCompat="@drawable/kavikabout" />

            <TextView
                android:id="@+id/tvAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="734dp"
                android:layout_marginBottom="230dp"
                android:background="#AA000000"
                android:text="@string/admin_profile"
                android:textColor="#D9AC7F" />

            <TextView
                android:id="@+id/tvCopyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="761dp"
                android:layout_marginBottom="230dp"
                android:background="#AA000000"
                android:text="@string/developer_string"
                android:textColor="#D9AC7F" />
        </RelativeLayout>
    </ScrollView>


</LinearLayout>